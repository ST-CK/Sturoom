{
  "version": 2,
  "buildCommand": "next build --no-lint",
  "builds": [
    { "src": "mcp/main.py", "use": "@vercel/python" },
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/_next/(.*)", "dest": "/_next/$1" },
    { "src": "/api/(.*)", "dest": "mcp/main.py" },
    { "src": "/(.*)", "dest": "/" }
  ]
}
